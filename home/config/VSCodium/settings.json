{
    // =====================================
    // üñãÔ∏è Editor Appearance & Typography
    // =====================================
    "editor.semanticHighlighting.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": false,
    "editor.fontSize": 15,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "editor.showFoldingControls": "never",
    "editor.overviewRulerBorder": false,
    "editor.wrappingIndent": "indent",
    "editor.quickSuggestions": {
        "other": "off",
        "strings": true,
        "comments": "on",
    },
    "editor.padding.top": 10,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.hideCursorInOverviewRuler": true,
    "scm.diffDecorations": "none",
    "window.nativeFullScreen": true,
    // =====================================
    // üñ±Ô∏è Editor Interaction & Behavior
    // =====================================
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.mouseWheelZoom": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.scrollbar.horizontalScrollbarSize": 10,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.suggest.preview": true,
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "top",
    "breadcrumbs.enabled": false,
    "editor.hover.delay": 1500,
    "editor.hover.enabled": true,
    "diffEditor.renderSideBySide": false,
    "editor.emptySelectionClipboard": false,
    "editor.copyWithSyntaxHighlighting": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.wordWrap": "on",
    "editor.stickyScroll.enabled": false,
    // "editor.wordWrap": "wordWrapColumn",
    // =====================================
    // üé® Themes, Icons & UI Layout
    // =====================================
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.showTabs": "none",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.location": "bottom",
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.revealIfOpen": true,
    "workbench.tips.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 10,
    "window.titleBarStyle": "custom",
    "window.menuStyle": "custom",
    "window.zoomLevel": -0.1,
    "apc.electron": {
        "titleBarStyle": "hiddenInset"
    },
    // =====================================
    // üîê Security & Trust Settings
    // =====================================
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.enabled": false,
    // =====================================
    // üß© Extensions & Language Tools
    // =====================================
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "blade": "html",
        "vue-html": "html",
        "vue": "html",
        "react": "html",
        "javascript": "html"
    },
    "extensions.ignoreRecommendations": true,
    "extensions.autoUpdate": false,
    "todo-tree.highlights.enabled": false,
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "svelte.enable-ts-plugin": true,
    "C_Cpp.intelliSenseEngine": "disabled",
    "ruff.nativeServer": true,
    // "continue.telemetryEnabled": false,
    // "continue.pauseTabAutocompleteOnBattery": true,
    "nixEnvSelector.useFlakes": true,
    "nixEnvSelector.suggestion": false,
    "gitlens.terminal.overrideGitEditor": false,
    // LATEX
    "latex-workshop.formatting.latex": "tex-fmt",
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.latex.autoClean.run": "onSucceeded",
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    "latex-workshop.latex.outDir": "%DIR%/out_dir",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.intellisense.update.aggressive.enabled": true,
    "direnv.restart.automatic": true,
    // VHDL
    "vhdl-by-hgb.vhdl-formatter.case.keyword": "UpperCase",
    "vhdl-by-hgb.vhdl-formatter.case.typename": "UpperCase",
    "vhdl-by-hgb.vhdl-formatter.indentation": "  ",
    "vhdl-by-hgb.vhdl-formatter.insertFinalNewline": true,
    "vhdl-by-hgb.vhdl-formatter.align.procedure": true,
    "vhdl-by-hgb.vhdl-formatter.align.port": true,
    "vhdl-by-hgb.vhdl-formatter.align.generic": true,
    "vhdl-by-hgb.vhdl-formatter.align.function": true,
    "vhdl-by-hgb.vhdl-formatter.align.all": true,
    "vhdl-by-hgb.vhdl-formatter.align.comments": true,
    // MARKDOWN
    "markdown.extension.showActionButtons": true,
    "markdown.extension.toc.levels": "2..6",
    "markdown.extension.toc.omittedFromToc": {
        "README.md": [
            "## Table of contents"
        ]
    },
    // FZF PICKER
    // Setup fzf-picker extension
    "fzf-picker.customTasks": [
        // Choose folder to open on new window
        {
            "name": "zoxide",
            "command": "cursor $(zoxide query --interactive)"
        }
    ],
    // Allow top open a file with line number
    "fzf-picker.general.openCommand": "codium -g",
    "fzf-picker.cache.directory": "/home/user/.cache/fzf-picker",
    // =====================================
    // üß™ Python, Go, Language Servers
    // =====================================
    "python.languageServer": "Jedi",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.venvPath": "${workspaceFolder}/.venv",
    "gopls": {
        "ui.semanticTokens": true
    },
    // =====================================
    // üìù Per-language editor settings
    // =====================================
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "always",
            "source.organizeImports.ruff": "always",
            "source.fixAll.markdownlint": "always",
            "source.fixAll": "always"
        }
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint",
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[tailwindcss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.autoIndent": "advanced"
    },
    "[yml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.autoIndent": "advanced"
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.autoIndent": "advanced"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.autoIndent": "advanced"
    },
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": false
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "[latex]": {
        "editor.formatOnPaste": false,
        "editor.suggestSelection": "recentlyUsedByPrefix",
        "editor.defaultFormatter": "James-Yu.latex-workshop"
    },
    "[postcss]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[vhdl]": {
        "editor.defaultFormatter": "p2l2.vhdl-by-hgb"
    },
    // =====================================
    // üìÅ File Management & Associations
    // =====================================
    "files.autoSave": "afterDelay",
    "files.autoSaveWorkspaceFilesOnly": true,
    "files.autoSaveWhenNoErrors": true,
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        "*.sty": "latex",
        "*.cls": "latex"
    },
    "files.exclude": {
        "**/*.4ct": true,
        "**/*.4tc": true,
        "**/*.fdb_latexmk": true,
        "**/*.idv": true,
        "**/*.lg": true,
        "**/*.lof": true,
        "**/*.synctex.gz": true,
        "**/*.synctex(busy)": true,
        "**/*.tmp": true,
        "**/*.xref": true,
        "**/*.fls": true,
        "**/*.loc": true,
        "**/*.run.xml": true,
        "**/*.soc": true,
        "**/*.snm": true,
        "**/*.blg": true,
        "**/*-SAVE-ERROR": true
    },
    // =====================================
    // üîç Search & Quick Open
    // =====================================
    "search.quickOpen.includeSymbols": true,
    "search.useIgnoreFiles": false,
    "search.exclude": {
        // Hide everything in /vendor, except the "laravel" and "livewire" folder.
        "**/vendor/{[^l],?[^ai]}*": true,
        // Hide everything in /public, except "index.php"
        "**/public/{[^i],?[^n]}*": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/_ide_helper.php": true,
        "**/composer.lock": true,
        "**/package-lock.json": true,
        "**/.venv/": true,
        "**/venv/": true,
        "**/.cache/": true,
        "**/.direnv/": true,
        "**/.git/": true,
        "storage": true,
        ".phpunit.result.cache": true
    },
    // =====================================
    // üìÇ Explorer & Folder Behavior
    // =====================================
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "explorer.compactFolders": false,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "flake.nix": "flake.lock",
        "Cargo.toml": "Cargo.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    // =====================================
    // üñ•Ô∏è Terminal
    // =====================================
    "terminal.integrated.hideOnStartup": "always",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.confirmOnKill": "never",
    "terminal.integrated.shellIntegration.history": 1000,
    "terminal.integrated.suggest.cdPath": "relative",
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.tabs.showActions": "always",
    "terminal.integrated.tabs.showActiveTerminal": "always",
    "terminal.integrated.tabs.enabled": true,
    // =====================================
    // üîÑ Workflows / Sync / Update
    // =====================================
    "update.mode": "manual",
    "syncing.separateKeybindings": false,
    // =====================================
    // üõ†Ô∏è Debugging
    // =====================================
    "debugpy.showPythonInlineValues": true,
    "debug.terminal.clearBeforeReusing": true,
    // =====================================
    // üß¨ Markdown / Linting Config
    // =====================================
    "markdownlint.config": {
        "MD033": false,
        "MD007": {
            "indent": 4
        },
        "MD045": false
    },
    "markdown.extension.list.indentationSize": "inherit",
    // =====================================
    // ‚öôÔ∏è Misc System Settings
    // =====================================
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    "periscope.showPreviousResultsWhenNoMatches": true,
    "trailing-spaces.trimOnSave": true,
    "vhdl-by-hgb.vhdlls.toml.generation": "manual",
    "autoOpenPreviewPanel.openPreviewToSide": true,
    "autoOpenPreviewPanel.languages": "markdown",
    "terminal.integrated.enableImages": true,
    "license.default": "MIT",
    "license.author": "N¬£utr0nys",
    "editor.wordWrap": "on",
}
