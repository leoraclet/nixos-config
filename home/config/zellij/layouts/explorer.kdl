layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="file:~/.config/zellij/plugins/zj-status-bar.wasm"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="yazi" focus=true {
        pane {
            command "yazi"
            args "."
        }
    }

    tab name="exec" {
        pane split_direction="vertical" {
            pane {
                name "main"
            }
            pane {
                name "secondary"
                size "30%"
            }
        }
    }
}
